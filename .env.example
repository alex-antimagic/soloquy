# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development  # Use 'production' for deployment
# Generate SECRET_KEY with: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=your-secret-key-here

# Database
# Development: postgresql://localhost/soloquy
# Production (Heroku): Automatically set by Heroku Postgres addon
DATABASE_URL=postgresql://localhost/soloquy

# AI Integration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Error Tracking (Optional but recommended for production)
# Sign up at https://sentry.io and create a new project
# Free tier: 5,000 errors/month
SENTRY_DSN=your-sentry-dsn-here

# Email Service (SendGrid - Required for notifications)
# Sign up at https://sendgrid.com (free tier: 100 emails/day)
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your-sendgrid-api-key-here
MAIL_DEFAULT_SENDER=noreply@soloquy.app
MAIL_ADMIN_EMAIL=admin@soloquy.app

# Cloudinary (Required for file uploads)
# Sign up at https://cloudinary.com (free tier available)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Redis (Required for background jobs and SocketIO)
# Development: redis://localhost:6379/0
# Production (Heroku): Automatically set by Heroku Redis addon
REDIS_URL=redis://localhost:6379/0

# SocketIO CORS Configuration
# Comma-separated list of allowed origins for WebSocket connections
# Development: http://localhost:5000
# Production: https://your-app-name.herokuapp.com
SOCKETIO_CORS_ORIGINS=http://localhost:5000

# Optional: Port configuration
PORT=5000

# SECURITY NOTE: Never commit the .env file to version control!
# For Heroku deployment, set these as config vars:
#   heroku config:set SECRET_KEY=$(python -c 'import secrets; print(secrets.token_hex(32))')
#   heroku config:set FLASK_ENV=production
#   heroku config:set ANTHROPIC_API_KEY=your_key_here
#   heroku config:set SENTRY_DSN=your_sentry_dsn
#   heroku config:set SENDGRID_API_KEY=your_sendgrid_api_key
#   heroku config:set MAIL_DEFAULT_SENDER=noreply@yourdomain.com
#   heroku config:set SOCKETIO_CORS_ORIGINS=https://your-app.herokuapp.com
